<!-- data_table.ejs -->

<table id="data-table" class="w-full table-auto">
    <tr>
        <th class="px-4 py-2">ID</th>
        <th class="px-4 py-2">Name</th>
        <th class="px-4 py-2">Actions</th>
    </tr>
    <% items.forEach(function(item) { %>
    <tr>
        <td class="border px-4 py-2"><%= item.id %></td>
        <td class="border px-4 py-2"><%= item.name %></td>
        <td class="border px-4 py-2">
            <a href="/edit-item-form/<%= item.id %>" hx-get="/edit-item-form/<%= item.id %>" hx-target="#modal" hx-toggle="modal">Edit</a>
            <form action="/delete-item/<%= item.id %>" method="post" hx-post="/delete-item/<%= item.id %>" hx-target="#data-section">
                <button type="submit">Delete</button>
            </form>
        </td>
    </tr>
    <% }); %>
</table>